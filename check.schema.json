{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "url.com/name.json",
    "title": "JSON Schema for data team test files",
    "description": "",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "checkName": {
            "description": "Name of the check",
            "type": "string"
        },
        "checkType": {
            "description": "Type of check to run",
            "type": "string",
            "enum": ["sqlserver"]
        },
        "checkSuites": {
            "description": "An array of suites for the check to run as part of",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "passValue": {
            "description": "Value that defines success",
            "type": "string"
        },
        "sql": {
            "description": "SQL to run",
            "type": "string"
        },
        "database": {
            "description": "Database to execute on",
            "type": "string"
        }
    },
    "required": ["checkName", "checkType", "passValue"]
}