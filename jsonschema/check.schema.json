{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "JSON Schema for data team test files",
    "description": "",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "checkIsSqlServer": {
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "const": "sqlserver"
                }
            }
        },
        "checkAsSQLServer": {
            "required": [
                "database", "sql", "passValue"
            ],
            "properties": {
                "database": {
                    "description": "database key",
                    "type": "string"
                },
                "sql": {
                    "description": "SQL to run",
                    "type": "string"
                },
                "passValue": {
                    "description": "Value that defines success",
                    "type": "string"
                }
            }
        },
        "checkType": {
            "allOf": [
                {
                    "if": {
                        "$ref": "#/definitions/checkIsSqlServer"
                    },
                    "then": {
                        "$ref": "#/definitions/checkAsSQLServer"
                    }
                }
            ]
        }
    },
    "properties": {
        "checkName": {
            "description": "Name of the check",
            "type": "string"
        },
        "checkSuites": {
            "description": "An array of suites for the check to run as part of",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "checkType": {
            "$ref": "#/definitions/checkType"
        }
    },
    "required": ["checkName", "checkType", "checkSuites"]
}